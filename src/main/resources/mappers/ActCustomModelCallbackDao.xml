<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hx.activiti.demo.dao.ActCustomModelCallbackDao">
    <insert id="save">
        INSERT into act_custom_model_callback(model_id, callback)
        values (#{model_id}, #{callback})
    </insert>
    <select id="getByModel" resultType="com.hx.activiti.demo.model.ActCustomModelCallback">
        SELECT * FROM act_custom_model_callback
        where model_id = #{model}
    </select>
</mapper>