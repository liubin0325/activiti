<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hx.activiti.demo.dao.ActCustomModelFormDao">
    <resultMap id="BaseMap" type="com.hx.activiti.demo.model.ActCustomModelForm">
        <result property="model_id" column="model_id"/>
        <association property="form" column="form_id"
                     select="com.hx.activiti.demo.dao.ActCustomFormDao.getById"/>
    </resultMap>
    <insert id="save">
        insert into act_custom_model_form
        values (#{model_id},#{form.form_id})
    </insert>
    <update id="update">
        update act_custom_model_form
        set form_id=#{form.form_id}
        where model_id=#{model_id}
    </update>
    <select id="getByModelId" resultMap="BaseMap">
        select * from act_custom_model_form
        where model_id=#{modelId}
    </select>
</mapper>